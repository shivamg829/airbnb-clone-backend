<%- include('partials/head') %>
  <body>
<%- include('partials/header') %>
    <main class="flex items-center justify-center min-h-screen bg-gray-50 py-8">
      <div class="bg-white rounded-lg shadow-md p-8 w-full max-w-md">
        <h1 class="text-2xl font-bold text-gray-800 text-center mb-6">Register Your Home</h1>
        
        <form action="/host/add-home" method="POST" class="space-y-6">
          <div class="space-y-2">
            <label for="houseName" class="block text-sm font-medium text-gray-700">Home Name</label>
            <input 
              id="houseName"
              name="houseName" 
              placeholder="Enter home name" 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:red-blue-500 transition duration-200 outline-none"
              required
            />
          </div>
          
          <div class="space-y-2">
            <label for="price" class="block text-sm font-medium text-gray-700">Price Per night</label>
            <input 
              id="price"
              name="price" 
              placeholder="Price" 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition duration-200 outline-none"
              required
            />
          </div>
          <div class="space-y-2">
            <label for="location" class="block text-sm font-medium text-gray-700">Location</label>
            <input 
              id="location"
              name="location" 
              placeholder="Location" 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition duration-200 outline-none"
              required
            />
          </div>
          <div class="space-y-2">
            <label for="rating" class="block text-sm font-medium text-gray-700">Rating</label>
            <input 
              id="rating"
              name="rating" 
              placeholder="Rating" 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition duration-200 outline-none"
              required
            />
          </div>
          <div class="space-y-2">
            <label for="rating" class="block text-sm font-medium text-gray-700">Photo Url</label>
            <input 
              id="photoUrl"
              name="photoUrl" 
              placeholder="Photo URL" 
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition duration-200 outline-none"
              required
            />
          </div>
          
          <button 
            type="submit" 
            class="w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-4 rounded-lg transition duration-200 transform hover:scale-105 focus:ring-2 focus:ring-red-500 focus:ring-offset-2"
          >
            Register Home
          </button>
        </form>
      </div>
    </main>
  </body>
</html>