<%- include('../partials/head') %>
<body>
  <%- include('../partials/header') %>
  <main class="flex items-center justify-center min-h-screen bg-gray-50 py-8">
    <div class="bg-white rounded-lg shadow-md p-8 w-full max-w-md">
      <h1 class="text-2xl font-bold text-gray-800 text-center mb-6">Login</h1>
      
      <form action="/login" method="POST" class="space-y-6">
        <div class="space-y-2">
          <label for="usernameOrEmail" class="block text-sm font-medium text-gray-700">Email</label>
          <input 
            type="text"
            name="usernameOrEmail"
            placeholder="Email/username"    
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition duration-200 outline-none"
          />
        </div>
        <div class="space-y-2">
          <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
          <input 
            type="password"
            name="password"
            placeholder="Password"    
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition duration-200 outline-none"
          />
        </div>
        <button 
          type="submit" 
          value="Sign In"
          class="w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-4 rounded-xl transition-all duration-300 transform hover:scale-105 hover:shadow-lg focus:ring-2 focus:ring-red-500 focus:ring-offset-2"
        >
            Login
        </button>
      </form>
    </div>
  </main>
</body>
</html>