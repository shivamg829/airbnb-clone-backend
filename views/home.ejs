<%- include('partials/head') %>
  <body class="bg-gray-50">
    <%- include('partials/header') %>
    
    <main class="container mx-auto px-4 py-8 max-w-7xl">
      <!-- Hero Section -->
      <div class="text-center mb-12">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-800 mb-4">
          Discover Your Dream <span class="text-red-500">Home</span>
        </h1>
        <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto">
          Explore our curated collection of beautiful homes perfect for your next chapter
        </p>
      </div>

      <!-- Stats Bar -->
      <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 mb-8">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-center">
          <div>
            <div class="text-2xl md:text-3xl font-bold text-gray-800"><%= registeredHomes.length %></div>
            <div class="text-sm text-gray-500">Total Homes</div>
          </div>
          <div>
            <div class="text-2xl md:text-3xl font-bold text-green-600">
              <%= Math.max(...registeredHomes.map(h => h.rating)) %>
            </div>
            <div class="text-sm text-gray-500">Highest Rating</div>
          </div>
          <div>
            <div class="text-2xl md:text-3xl font-bold text-blue-600">
              $<%= Math.min(...registeredHomes.map(h => h.price)) %>
            </div>
            <div class="text-sm text-gray-500">Starting Price</div>
          </div>
          <div>
            <div class="text-2xl md:text-3xl font-bold text-purple-600">
              <%= new Set(registeredHomes.map(h => h.location)).size %>
            </div>
            <div class="text-sm text-gray-500">Locations</div>
          </div>
        </div>
      </div>

      <!-- Homes Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 md:gap-8">
        <% registeredHomes.forEach(home => { %>
          <div class="group bg-white rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 overflow-hidden border border-gray-100">
            
            <!-- Image with Overlay -->
            <div class="relative h-56 md:h-64 overflow-hidden">
              <% if (home.photoUrl) { %>
                <img 
                  src="<%= home.photoUrl %>" 
                  alt="<%= home.houseName %>" 
                  class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                >
              <% } else { %>
                <div class="w-full h-full flex items-center justify-center bg-gradient-to-br from-red-50 to-red-100">
                  <svg class="w-16 h-16 text-red-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                  </svg>
                </div>
              <% } %>
              
              <!-- Premium Badge -->
              <% if (home.rating >= 4.5) { %>
                <div class="absolute top-4 left-4 bg-gradient-to-r from-yellow-400 to-yellow-500 text-white px-3 py-1 rounded-full text-xs font-bold shadow-lg">
                  ‚≠ê PREMIUM
                </div>
              <% } %>
              
              <!-- Rating Badge -->
              <div class="absolute top-4 right-4 bg-white/90 backdrop-blur-sm rounded-2xl px-3 py-2 shadow-lg">
                <div class="flex items-center gap-1">
                  <svg class="w-4 h-4 text-yellow-500 fill-current" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                  <span class="text-sm font-bold text-gray-800"><%= home.rating %></span>
                </div>
              </div>

              <!-- Price Overlay -->
              <div class="absolute bottom-4 left-4 bg-gradient-to-r from-red-500 to-red-600 text-white px-4 py-2 rounded-2xl shadow-xl">
                <div class="text-lg font-bold">RS<%= home.price %></div>
                <div class="text-xs opacity-90">per month</div>
              </div>
            </div>

            <!-- Content Section -->
            <div class="p-5 md:p-6">
              <!-- House Name -->
              <h3 class="text-lg md:text-xl font-bold text-gray-800 mb-2 line-clamp-1"><%= home.houseName %></h3>
              
              <!-- Location -->
              <div class="flex items-center gap-2 text-gray-600 mb-4">
                <svg class="w-4 h-4 text-red-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-sm md:text-base truncate"><%= home.location %></span>
              </div>

              <!-- Action Button -->
              <button class="w-full bg-red-500 hover:bg-red-600 text-white font-semibold py-3 px-4 rounded-xl transition-all duration-300 transform hover:scale-105 hover:shadow-lg flex items-center justify-center gap-2 group/btn">
                <span>View Details</span>
                <svg class="w-4 h-4 transform group-hover/btn:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                </svg>
              </button>
            </div>
          </div>
        <% }) %>
      </div>

      <!-- Empty State -->
      <% if (registeredHomes.length === 0) { %>
        <div class="text-center py-16 md:py-24">
          <div class="bg-gradient-to-br from-red-50 to-red-100 w-32 h-32 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-16 h-16 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
          </div>
          <h3 class="text-3xl font-bold text-gray-700 mb-3">No Homes Available Yet</h3>
          <p class="text-gray-500 text-lg max-w-md mx-auto mb-8">
            We're working on adding amazing properties. Check back soon!
          </p>
          <button class="bg-red-500 hover:bg-red-600 text-white font-semibold py-3 px-8 rounded-xl transition-colors duration-300">
            Get Notified
          </button>
        </div>
      <% } %>
    </main>

    <!-- Add this to your CSS for line-clamp utility -->
    <style>
      .line-clamp-1 {
        overflow: hidden;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 1;
      }
    </style>
  </body>
</html>