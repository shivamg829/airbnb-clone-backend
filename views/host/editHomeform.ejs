<%- include('../partials/head') %>
<body>
  <%- include('../partials/header') %>
  <main class="flex items-center justify-center min-h-screen bg-gray-50 py-8">
    <div class="bg-white rounded-lg shadow-md p-8 w-full max-w-md">
      <h1 class="text-2xl font-bold text-gray-800 text-center mb-6"><%= editing ? "Edit" : "Register" %> Your Home</h1>
      
      <form action="<%= editing ? '/host/editHomeform' : '/host/add-home' %>" method="POST" class="space-y-6">
        <% if (editing && home) { %>
          <input type="hidden" name="id" value="<%= home.id %>"/>
        <% } %>
        
        <div class="space-y-2">
          <label for="houseName" class="block text-sm font-medium text-gray-700">Home Name</label>
          <input 
            id="houseName"
            name="houseName" 
            value="<%= editing && home ? home.houseName : '' %>"
            placeholder="Enter home name" 
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition duration-200 outline-none"
            required
          />
        </div>
        
        <div class="space-y-2">
          <label for="price" class="block text-sm font-medium text-gray-700">Price Per Night</label>
          <input 
            id="price"
            name="price" 
            type="number"
            step="0.01"
            value="<%= editing && home ? home.price : '' %>"
            placeholder="Price" 
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition duration-200 outline-none"
            required
          />
        </div>
        
        <div class="space-y-2">
          <label for="location" class="block text-sm font-medium text-gray-700">Location</label>
          <input 
            id="location"
            name="location" 
            value="<%= editing && home ? home.location : '' %>"
            placeholder="Location" 
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition duration-200 outline-none"
            required
          />
        </div>
        
        <div class="space-y-2">
          <label for="rating" class="block text-sm font-medium text-gray-700">Rating</label>
          <input 
            id="rating"
            name="rating" 
            type="number"
            step="0.1"
            min="0"
            max="5"
            value="<%= editing && home ? home.rating : '' %>"
            placeholder="Rating" 
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition duration-200 outline-none"
            required
          />
        </div>
        
        <div class="space-y-2">
          <label for="photoUrl" class="block text-sm font-medium text-gray-700">Photo URL</label>
          <input 
            id="photoUrl"
            name="photoUrl" 
            value="<%= editing && home ? home.photoUrl : '' %>"
            placeholder="Photo URL" 
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-red-500 transition duration-200 outline-none"
            required
          />
        </div>
        
        <button 
          type="submit" 
          class="w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-3 px-4 rounded-xl transition-all duration-300 transform hover:scale-105 hover:shadow-lg focus:ring-2 focus:ring-red-500 focus:ring-offset-2"
        >
          <%= editing ? "Update Home" : "Register Home" %>
        </button>
      </form>
    </div>
  </main>
</body>
</html>